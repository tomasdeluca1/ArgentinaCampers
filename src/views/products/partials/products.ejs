<% for (let productoInfo of productos) { %> 
    <article class="descProductos">
        <div class="componentes-del-producto">
            <h4><%= productoInfo.marca + " " + productoInfo.modelo %> </h4>
        </div>
        <div class="componentes-del-producto">
            <img src="../images/imagenesproductos/<%= productoInfo.img %>" alt="<%= productoInfo.marca + productoInfo.modelo %>" class="productoImg">
        </div>
        <div class="componentes-del-producto">
            <p><%= productoInfo.descripcion %></p>
        </div>
        <div class="opcionesProducto <%= !locals.admin ? 'centrar-div' : null %>">
            <div class="masDetalles">
                <a href="products/<%= productoInfo.id %>">MÃ¡s Detalles</a>
            </div>
            <% if (locals.admin) { %>
                <div class="editarProducto">
                    <a href="products/<%= productoInfo.id %>/edit"><i class="fa-solid fa-pencil"></i></a>
                </div>
            <% } %> 
        </div>
    </article>
<% } %> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/home.css">
    <link rel="stylesheet" href="./css/register.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet"> 
    <script src="https://kit.fontawesome.com/d70d29ff66.js" crossorigin="anonymous"></script>
    <title>Register</title>
</head>
<body>
    <!-- Header -->

    <%- include('./partials/header') %> 

    <section class="nav-vehiculos">
        <article>
            <h3><a href="home">Home</a> / <a href="/register">Register</a></h3>
        </article>
    </section>
    <section class="register">
        <form action="/app.js" method="post" class="formulario">
            <div class="cajaRegistro">
            <div>
                <input type="text" name="txtNombreUsuario" placeholder="Nombre" class="casillaRegistro">
            </div>
            <div>
                <input type="text" name="txtApellidoUsuario" placeholder="Apellido" class="casillaRegistro">
            </div>
            <div>
                <input type="email" name="txtEmailUsuario" placeholder="Correo Electrónico" class="casillaRegistro">
            </div>
            <div>
                <input type="tel" name="numTelefonoUsuario" placeholder="Número telefónico" class="casillaRegistro">
            </div>
            <div class="date">
                <label name="dateNacimientoUsuario">Fecha de nacimiento</label>
                <input type="date" name="dateNacimientoUsuario" class="fechaRegistro">
            </div>
            <button type="submit">Registrarme</button>
        </div>
        </form>
    </section>

    <div class="msjPosisionAbsoluta">
   
        <span class="msj"><a href="#"> <i class="fa-solid fa-comment"></i></a></span>
    </div>
   
    <!-- Footer -->
    
    <%- include('./partials/footer') %> 
</body>
</html>
